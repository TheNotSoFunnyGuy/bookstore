mixin authorForm(author, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='FirstName') First Name
                input(id='FirstName' name='FirstName' value= author.FirstName)

            div.form-input
                label(for='LastName') Last Name
                input(id='LastName' name='LastName' value= author.LastName)

            div.form-input
                label(for='dateOfBirth') Date Of Birth
                input(id='dateOfBirth' name='dateOfBirth' type='date' value= author.dateOfBirth)

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button.primary(type='submit') Save