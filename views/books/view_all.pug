extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th Cover Image
                th Book Title
                th Author
                th Genre
                th
        tbody
            each book in books
                tr
                    td
                        img(src=book.coverImage)
                    td= book.title
                    td= book.author1
                    td= book.genre
                    td
                        a(href=`/books/profile/${book.id}`) View Book